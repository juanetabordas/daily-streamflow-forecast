@Article{Alvarez_and_Poveda_2022,
	AUTHOR = {Alvarez, Diana M. and Poveda, Germán},
	TITLE = {Spatiotemporal Dynamics of NDVI, Soil Moisture and ENSO in Tropical South America},
	JOURNAL = {Remote Sensing},
	VOLUME = {14},
