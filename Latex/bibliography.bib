@article{Giraldo-Cardenas_et_al_2021,
	author = {Giraldo-Cardenas, Santiago and Arias, Paola A. and Vieira, Sara C. and Zuluaga, Manuel D.},
	title = {Easterly waves and precipitation over northern South America and the Caribbean},
	journal = {International Journal of Climatology},
	volume = {42},
	number = {3},
	pages = {1483-1499},
	keywords = {convection, easterly waves, madden–Julian oscillation, northern South America, precipitation},
